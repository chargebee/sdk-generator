    req.isJsonRequest = true
    {{/if~}}
    {{#if isListResourceAction~}}
    req.isListRequest = true
    {{/if~}}
    {{#if options.isIdempotent~}}
    req.isIdempotent = true
    {{/if~}}

    return send[*{{camelCaseToPascalCase @root.name}}{{camelCaseToPascalCase goParamName}}Response](req, s.config)
}
